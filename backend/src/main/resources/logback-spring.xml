<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- MDC 포함 로그 패턴 (backendrule_kairos.md §1.4) -->
    <property name="LOG_PATTERN" value="%d{HH:mm:ss.SSS} [%thread] [%X{requestId}] %-5level %logger{36} - %msg%n"/>
    
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- 파일 로그 (logs/ 폴더) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/kairos.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/kairos.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- KAIROS 패키지 로그 레벨 -->
    <logger name="com.kairos.trading" level="DEBUG"/>
    
    <!-- Agent 로그는 INFO로 (너무 많은 로그 방지) -->
    <logger name="com.kairos.trading.domain.*.agent" level="INFO"/>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>
